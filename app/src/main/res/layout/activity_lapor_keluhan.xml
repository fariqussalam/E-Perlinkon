<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="113dp"
                android:text="FORM PELAPORAN"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:id="@+id/spinnerJenkel"
                tools:ignore="MissingConstraints"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginEnd="28dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="151dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="28dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Gambar 2"
                android:id="@+id/buttonIm2"
                tools:ignore="MissingConstraints"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/imageView4"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintRight_toRightOf="@+id/editTextPengaduan"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerJenkel"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="9dp"
                app:layout_constraintLeft_toLeftOf="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/buttonIm3"
                android:layout_width="113dp"
                android:layout_height="0dp"
                android:text="Gambar 3"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/buttonIm4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="11dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView4"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="124dp"
                android:layout_height="64dp"
                android:text="Gambar 4"
                android:id="@+id/buttonIm4"
                tools:ignore="MissingConstraints"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/textViewIm4"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="60dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewIm4"
                tools:ignore="MissingConstraints"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                android:layout_marginStart="5dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/textView5"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Keterangan Pengaduan"
                android:id="@+id/textView5"
                tools:ignore="MissingConstraints"
                tools:layout_constraintBottom_creator="1"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="139dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="104dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editTextPengaduan"
                android:enabled="true"
                android:maxLines="10"
                android:nestedScrollingEnabled="true"
                android:scrollIndicators="right"
                android:visibility="visible"
                android:focusable="true"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                android:layout_marginStart="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonKembali"
                android:layout_marginEnd="9dp"
                app:layout_constraintRight_toRightOf="@+id/spinnerJenkel"
                android:layout_marginTop="108dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonIm4"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="107dp"
                app:layout_constraintLeft_toLeftOf="@+id/buttonCek"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp" />

            <Button
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="Kirim"
                android:id="@+id/buttonCek"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/buttonKembali"
                android:layout_marginStart="1dp"
                app:layout_constraintTop_toBottomOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="1dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:id="@+id/buttonKembali"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="124dp"
                android:layout_height="0dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="@+id/buttonIm4"
                android:layout_marginEnd="15dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="15dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="99dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="117dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/textViewIm4"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintRight_toRightOf="@+id/editTextPengaduan"
                android:layout_marginTop="206dp"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="206dp"
                app:layout_constraintLeft_toLeftOf="@+id/buttonKembali"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

